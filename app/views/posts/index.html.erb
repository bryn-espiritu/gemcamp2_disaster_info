<h1>Disaster Information List <span><%= link_to 'New', new_post_path, class: "nav-link" %></span></h1>

<table class="table text-center table-striped">
  <thead class="table-dark">
  <tr>
  <td>Title</td>
  <td>Content</td>
  <td>Address</td>
  <td>Disaster Type</td>
  <td colspan="3">Action</td>
  <td colspan="3">Comments</td>
    <td>User</td>
  </tr>
  </thead>
  <% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= post.address %></td>
    <td><%= post.categories.pluck(:name).join(',') %></td>
    <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-warning" %></td>
    <td><%= button_to 'Delete', post_path(post), method: :delete, class: "btn btn-danger" %></td>
    <td><%= link_to 'Show', post_path(post), class: "btn btn-info" %></td>
    <td><%= link_to "Comments", post_comments_path(post), class: "btn btn-success" %></td>
    <td><%= post.comments_count %></td>
    <td><%= link_to "New Comment", new_post_comment_path(post), class: "btn btn-success" %></td>
    <td><%= post.user.email %></td>
  </tr>
  <% end %>
</table>




