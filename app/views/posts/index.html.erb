<h1>Disaster Information Lists</h1>

<table class="table text-center">
  <thead>
  <tr>
  <td>Title</td>
  <td>Content</td>
  <td>Address</td>
  <td>Disaster Type</td>
  <td colspan="3">Action</td>
  <td colspan="2">Comments</td>
  </tr>
  </thead>
  <% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= post.address %></td>
    <td><%= post.categories.pluck(:name).join(',') %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= button_to 'Delete', post_path(post), method: :delete %></td>
    <td><%= link_to 'Show', post_path(post) %></td>
    <td><%= link_to "Comments", post_comments_path(post) %></td>
    <td> <%= link_to "New Comment", new_post_comment_path(post) %></td>
  </tr>
  <% end %>
</table>

<%= link_to "index", posts_path %>
<%= link_to 'New', new_post_path %>

