<div>
  <%= form_with model: @comment, url: path, data: {turbo: false} do |f| %>
    <div>
      <% if @comment.errors.any? %>
        <div>
          <% comment.errors.each do |error| %>
            <%= error.full_message %>
          <% end %>
        </div>
      <% end %>
    </div>
    <div>
      <%= f.text_area :content, class: "form-control", id: "exampleFormControlInput1", style: "height: 200px; margin-left: 1px; margin-bottom: 10px", placeholder: "Enter your Comment Here..." %>
    </div>
    <div class="text-center">
    <%= f.submit "Submit", class: "btn btn-success" %>
      <%= link_to "Go Back", post_comments_path(@post), class: "btn btn-success" %>
    </div>
  <% end %>
</div>